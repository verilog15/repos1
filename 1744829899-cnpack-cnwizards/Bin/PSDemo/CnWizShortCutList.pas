program CnWizShortCutList;

uses
  Windows, Messages, SysUtils, Classes, Graphics, Controls, Forms, Dialogs;

var
  Mgr: TCnWizShortCutMgr;
  ST: TCnWizShortCut;
  S: string;
  I: Integer;
begin
  Mgr := WizShortCutMgr;
  if Mgr <> nil then
  begin
    Writeln('WizShortCut Count: ' + IntToStr(Mgr.Count));
    Writeln('');
    for I := 0 to Mgr.Count - 1 do
    begin
      ST := Mgr.ShortCuts[I];
      if ST.ShortCut = 0 then
        S := Format('%d. Name: %s. Menu: %s.', [I, ST.Name, ST.MenuName])
      else
        S := Format('%d. Name: %s. Menu: %s. ShortCut: %s',
          [I, ST.Name, ST.MenuName, ShortCutToText(ST.ShortCut)]);
      Writeln(S);
    end;
  end;
end.
 
